{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",  // This label should match the one in launch.json
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cc",  // Adjust this if you have a specific set of source files
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },

            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by VSCode."
        }
    ]
}
